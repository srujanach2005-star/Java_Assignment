import java.util.*;
import java.util.stream.Collectors;

public class StreamExercise2 {
    public static void main(String[] args) {
        List<String> employees = Arrays.asList("john", "alice", "bob", "charlie", "diana");

        // Convert to uppercase, sort, and collect using method references
        List<String> result = employees.stream()
                .map(String::toUpperCase)     // method reference
                .sorted(String::compareTo)    // method reference
                .collect(Collectors.toList());

        System.out.println("Sorted uppercase names: " + result);
        // Output: [ALICE, BOB, CHARLIE, DIANA, JOHN]
    }
}
